node["TODO:type"]
{
    text: "TODO:description";
    symbol-shape: circle;
    symbol-size: 7;
}

node["TODO:status"="completed"],
node["TODO:certain"="yes"]
{
    font-size: 10;
    font-weight: bold;
}


node["TODO:type"="crossing"]
{
    text: concat(" ///  ", tag("TODO:description"));
    text-color: limegreen;
    symbol-fill-color: limegreen;
}

node["TODO:type"="cycleway"]
{
    text-color: magenta;
    symbol-fill-color: magenta;
}

node["TODO:type"="footway"]
{
    text-color: lime;
    symbol-fill-color: lime;
}

node["TODO:type"="geometry"]
{
    text-color: orange;
    symbol-fill-color: orange;
}

node["TODO:type"="misc"]
{
    text-color: white;
    symbol-fill-color: white;
}

node["TODO:type"="name"]
{
    text: concat("N: ", tag("TODO:description"));
    text-color: white;
    symbol-fill-color: white;
    symbol-shape: square;
}

node["TODO:type"="new"]
{
    text-color: aqua;
    symbol-fill-color: aqua;
}

node["TODO:type"="oneway"]
{
    text: concat(" → ", tag("TODO:description"));
    text-color: white;
    symbol-fill-color: white;
}

node["TODO:type"="restriction"]
{
    text: concat(" ✘ ", tag("TODO:description"));
    text-color: white;
    symbol-fill-color: white;
}

node["TODO:type"="sidewalk"]
{
    text-color: lime;
    symbol-fill-color: lime;
    symbol-shape: square;
}

node["TODO:type"="stop"]
{
    text-color: red;
    symbol-fill-color: red;
    symbol-shape: octagon;
}
node["TODO:type"="stop"]["TODO:description"="Arrêt toutes directions"]
{
    text: "";
}

node["TODO:type"="surface"]
{
    text-color: lightblue;
    symbol-fill-color: lightblue;
}

node["TODO:type"="traffic_signal"]
{
    text-color: yellow;
    symbol-fill-color: yellow;
}

